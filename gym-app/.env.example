# === Flask ===
FLASK_ENV=development
FLASK_DEBUG=1
# Cambia esta clave en producción
SECRET_KEY=change-me-please-32-chars-min

# Orígenes permitidos para CORS (separados por coma)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Host/Port donde corre Flask (para run.py / flask run)
APP_HOST=127.0.0.1
APP_PORT=5000

# === Base de datos (elige UNA de las dos opciones) ===
# Opción 1: URL completa (recomendado)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@127.0.0.1:5432/gymdb

# Opción 2: Campos sueltos (informativo — tu app usa DATABASE_URL)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=gymdb
